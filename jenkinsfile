pipeline {
    agent none
    triggers {
        cron('H 8 * * 3')
    }
    stages {
        stage('Sync') {
            agent { label 'cactuar && deploy' }
            steps {
                sh 'cd /data/scripts/automation/repos/platypus && git pull'
            }
        }
        stage('Build') {
            agent { docker 'golang:1.23.4' }
            steps {
                sh 'GOOS=linux GOARCH=amd64 go build -o /data/scripts/automation/programs/platypus .'
            }
        }
        stage('Deploy') {
            agent { label 'cactuar && deploy' }
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    retry(2) {
                        sh '/data/scripts/automation/programs/platypus.sh'
                    }
                }
            }
        }
    }
}